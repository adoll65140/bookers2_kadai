<table>
  <tbody>
    <% book.book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= link_to book.user do %>
            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %><br>
            <%= book_comment.user.name %>
          <% end %>
        </td>
        <td><%= book_comment.comment %></td>
        <td>
          <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger btn-sm" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>

<div class="new-comment">
  <%= render 'layouts/errors', obj: @book_comment %>
  <%= form_with(model: [@book, @book_comment], method: :post, local: true) do |f| %>
　  <%= f.text_area :comment, rows: '5', class: 'form-control' %>
    <%= f.submit "送信" %>
  <% end %>
</div>
